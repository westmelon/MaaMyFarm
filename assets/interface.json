{
    "name": "MaaMyFarm",
    "url": "https://github.com/westmelon/MaaMyFarm",
    "mirrorchyan_rid": "MaaGB",
    "mirrorchyan_multiplatform": true,
    "controller": [
        {
            "name": "ADB 默认方式",
            "type": "Adb"
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "{PROJECT_DIR}/resource"
            ]
        }
    ],
    "agent": {
        "child_exec": "python",
        "child_args": [
            "{PROJECT_DIR}/agent/main.py"
        ]
    },
    "task": [
        {
            "name": "进入游戏",
            "entry": "BackToHome"
        },
        {
            "name": "自动收菜",
            "entry": "StartCollect"
        }
    ],
    "option": {
        "任务选项1": {
            "cases": [
                {
                    "name": "文本1",
                    "pipeline_override": {
                        "OcrTask": {
                            "text": "文本1"
                        }
                    }
                },
                {
                    "name": "文本2",
                    "pipeline_override": {
                        "OcrTask": {
                            "text": "文本2"
                        }
                    }
                }
            ]
        }
    }
}